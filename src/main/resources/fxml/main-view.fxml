<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.dbschemastudio.controller.MainViewController"
            styleClass="border-pane">
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" BorderPane.alignment="CENTER" styleClass="header-bar">
            <children>
                <Label text="ðŸ”Œ Connection:" style="-fx-font-weight: bold;" />
                <Label fx:id="connectionStatusLabel" text="Unknown" styleClass="connection-status-disconnected" />
                <Label fx:id="connectionDetailsLabel" text="" styleClass="text-secondary" />
                <Button text="â†» Refresh" onAction="#handleRefreshConnection" styleClass="button-small" />
                <Separator orientation="VERTICAL" />
                <Label text="ðŸ“‹ Transaction:" style="-fx-font-weight: bold;" />
                <Label fx:id="transactionStatusLabel" text="Inactive" styleClass="transaction-status-inactive" />
            </children>
            <padding>
                <Insets top="12" right="20" bottom="12" left="20" />
            </padding>
        </HBox>
    </top>
    <center>
        <TabPane fx:id="mainTabPane">
            <tabs>
                <Tab text="ðŸ“ Tables" closable="false">
                    <content>
                        <ScrollPane fitToWidth="true">
                            <content>
                                <VBox spacing="16">
                                    <padding>
                                        <Insets top="12" right="12" bottom="12" left="12" />
                                    </padding>
                                    
                                    <!-- ENUM Type Management Section -->
                                    <VBox spacing="8">
                                        <Label text="ENUM Types" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <TextField fx:id="enumNameField" promptText="Enum name (e.g. status_type)" prefWidth="200" />
                                            <TextField fx:id="enumValuesField" promptText="Values (comma-separated: pending,active,done)" HBox.hgrow="ALWAYS" />
                                            <Button text="Create ENUM" onAction="#handleCreateEnum" />
                                            <Button text="Refresh" onAction="#handleRefreshEnums" />
                                        </HBox>
                                        <ListView fx:id="enumListView" prefHeight="80" />
                                    </VBox>
                                    
                                    <Separator />
                                    
                                    <!-- Table Creation Section -->
                                    <VBox spacing="8">
                                        <Label text="Create New Table" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <Label text="Table Name:" />
                                            <TextField fx:id="tableNameField" promptText="e.g. employees" prefWidth="200" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <Button text="Add Column" onAction="#handleAddColumn" />
                                            <Button text="Clear" onAction="#handleClearTableForm" />
                                        </HBox>
                                        
                                        <!-- Column Definition Grid -->
                                        <VBox fx:id="columnRowsContainer" spacing="4" />
                                        
                                        <HBox spacing="10">
                                            <Button text="Create Table" onAction="#handleCreateTable" />
                                        </HBox>
                                    </VBox>
                                    
                                    <Separator />
                                    
                                    <!-- Existing Tables Section -->
                                    <VBox spacing="8">
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <Label text="Existing Tables" styleClass="section-title" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <Button text="Refresh Tables" onAction="#handleRefreshTables" />
                                        </HBox>
                                        <ListView fx:id="tableListView" prefHeight="150" />
                                    </VBox>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>
                <Tab text="âœï¸ Alter Table" closable="false">
                    <content>
                        <ScrollPane fitToWidth="true">
                            <content>
                                <VBox spacing="16">
                                    <padding>
                                        <Insets top="16" right="16" bottom="16" left="16" />
                                    </padding>
                                    
                                    <!-- Table Selection -->
                                    <HBox spacing="10" alignment="CENTER_LEFT">
                                        <Label text="ðŸ“‹ Table:" style="-fx-font-weight: bold;" />
                                        <ComboBox fx:id="alterTableSelector" prefWidth="200" onAction="#handleAlterTableSelected" />
                                        <Button text="â†» Refresh" onAction="#handleRefreshAlterTables" styleClass="button-small" />
                                    </HBox>
                                    
                                    <Separator />
                                    
                                    <!-- Rename Table -->
                                    <VBox spacing="8">
                                        <Label text="Rename Table" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <TextField fx:id="newTableNameField" promptText="New table name" prefWidth="200" />
                                            <Button text="Rename Table" onAction="#handleRenameTable" />
                                        </HBox>
                                    </VBox>
                                    
                                    <Separator />
                                    
                                    <!-- Add Column -->
                                    <VBox spacing="8">
                                        <Label text="Add Column" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <TextField fx:id="addColumnNameField" promptText="Column name" prefWidth="150" />
                                            <ComboBox fx:id="addColumnTypeCombo" promptText="Type" prefWidth="150" />
                                            <TextField fx:id="addColumnConstraintsField" promptText="Constraints (e.g. NOT NULL)" prefWidth="200" />
                                            <Button text="Add Column" onAction="#handleAddColumnToTable" />
                                        </HBox>
                                    </VBox>
                                    
                                    <Separator />
                                    
                                    <!-- Drop Column -->
                                    <VBox spacing="8">
                                        <Label text="Drop Column" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <ComboBox fx:id="dropColumnSelector" promptText="Select column" prefWidth="200" />
                                            <Button text="Drop Column" onAction="#handleDropColumn" />
                                        </HBox>
                                    </VBox>
                                    
                                    <Separator />
                                    
                                    <!-- Rename Column -->
                                    <VBox spacing="8">
                                        <Label text="Rename Column" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <ComboBox fx:id="renameColumnSelector" promptText="Select column" prefWidth="150" />
                                            <Label text="â†’" />
                                            <TextField fx:id="newColumnNameField" promptText="New name" prefWidth="150" />
                                            <Button text="Rename Column" onAction="#handleRenameColumn" />
                                        </HBox>
                                    </VBox>
                                    
                                    <Separator />
                                    
                                    <!-- Alter Column Type -->
                                    <VBox spacing="8">
                                        <Label text="Change Column Type" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <ComboBox fx:id="alterColumnTypeSelector" promptText="Select column" prefWidth="150" />
                                            <Label text="â†’" />
                                            <ComboBox fx:id="newColumnTypeCombo" promptText="New type" prefWidth="150" />
                                            <CheckBox fx:id="usingCastCheckbox" text="USING cast" />
                                            <Button text="Change Type" onAction="#handleAlterColumnType" />
                                        </HBox>
                                    </VBox>
                                    
                                    <Separator />
                                    
                                    <!-- Add Constraints -->
                                    <VBox spacing="8">
                                        <Label text="Add Constraint" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <ComboBox fx:id="constraintTypeCombo" promptText="Constraint type" prefWidth="150" />
                                            <TextField fx:id="constraintNameField" promptText="Constraint name (optional)" prefWidth="150" />
                                            <TextField fx:id="constraintDefinitionField" promptText="Definition" prefWidth="250" />
                                            <Button text="Add Constraint" onAction="#handleAddConstraint" />
                                        </HBox>
                                        <Label text="Examples: CHECK (age > 0), UNIQUE (email), FOREIGN KEY (dept_id) REFERENCES departments(id)" 
                                               style="-fx-font-size: 10px; -fx-text-fill: gray;" wrapText="true" />
                                    </VBox>
                                    
                                    <Separator />
                                    
                                    <!-- Drop Constraint -->
                                    <VBox spacing="8">
                                        <Label text="Drop Constraint" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <TextField fx:id="dropConstraintNameField" promptText="Constraint name" prefWidth="200" />
                                            <Button text="Drop Constraint" onAction="#handleDropConstraint" />
                                        </HBox>
                                    </VBox>
                                    
                                    <Separator />
                                    
                                    <!-- Set/Drop NOT NULL -->
                                    <VBox spacing="8">
                                        <Label text="NOT NULL Constraint" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <ComboBox fx:id="notNullColumnSelector" promptText="Select column" prefWidth="150" />
                                            <Button text="âœ“ SET NOT NULL" onAction="#handleSetNotNull" styleClass="button-success" />
                                            <Button text="âœ— DROP NOT NULL" onAction="#handleDropNotNull" styleClass="button-danger" />
                                        </HBox>
                                    </VBox>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>
                <Tab text="ðŸ” Data Viewer" closable="false">
                    <content>
                        <VBox spacing="12">
                            <padding>
                                <Insets top="16" right="16" bottom="16" left="16" />
                            </padding>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="ðŸ“‹ Table:" style="-fx-font-weight: bold;" />
                                <ComboBox fx:id="dataTableSelector" prefWidth="200" onAction="#handleDataTableSelected" />
                                <Button text="â†» Reload" onAction="#handleReloadData" styleClass="button-primary" />
                            </HBox>
                            
                            <!-- Column Selection -->
                            <VBox spacing="6">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="Select Columns:" />
                                    <CheckBox fx:id="selectAllColumnsCheckbox" text="All (*)" selected="true" onAction="#handleSelectAllColumns" />
                                    <Button text="Choose..." onAction="#handleChooseColumns" />
                                    <Label fx:id="selectedColumnsLabel" text="" />
                                </HBox>
                            </VBox>
                            
                            <!-- Filters -->
                            <VBox spacing="6">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="Filters (WHERE):" />
                                    <Button text="Add Filter" onAction="#handleAddFilter" />
                                    <Button text="Clear" onAction="#handleClearFilter" />
                                </HBox>
                                <VBox fx:id="filterRowsContainer" spacing="4" />
                            </VBox>
                            
                            <!-- Sorting -->
                            <VBox spacing="6">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="Sort (ORDER BY):" />
                                    <ComboBox fx:id="orderByColumnCombo" promptText="Column" prefWidth="150" />
                                    <ComboBox fx:id="orderDirectionCombo" prefWidth="100" />
                                    <Button text="Add Sort" onAction="#handleAddSort" />
                                    <Button text="Clear" onAction="#handleClearSort" />
                                </HBox>
                                <VBox fx:id="sortRowsContainer" spacing="4" />
                            </VBox>
                            
                            <!-- Grouping and Aggregation -->
                            <VBox spacing="6">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <CheckBox fx:id="enableGroupByCheckbox" text="Group By" onAction="#handleToggleGroupBy" />
                                    <ComboBox fx:id="groupByColumnCombo" promptText="Column" prefWidth="150" disable="true" />
                                    <Button text="Add Group" onAction="#handleAddGroupBy" disable="true" fx:id="addGroupButton" />
                                    <Button text="Clear Groups" onAction="#handleClearGroupBy" disable="true" fx:id="clearGroupButton" />
                                </HBox>
                                <VBox fx:id="groupByRowsContainer" spacing="4" />
                            </VBox>
                            
                            <!-- Aggregate Functions -->
                            <VBox spacing="6" fx:id="aggregateSection" visible="false" managed="false">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="Aggregate Functions:" />
                                    <ComboBox fx:id="aggregateFunctionCombo" promptText="Function" prefWidth="100" />
                                    <ComboBox fx:id="aggregateColumnCombo" promptText="Column" prefWidth="150" />
                                    <TextField fx:id="aggregateAliasField" promptText="Alias (optional)" prefWidth="120" />
                                    <Button text="Add" onAction="#handleAddAggregate" />
                                    <Button text="Clear" onAction="#handleClearAggregates" />
                                </HBox>
                                <VBox fx:id="aggregateRowsContainer" spacing="4" />
                            </VBox>
                            
                            <!-- HAVING clause -->
                            <VBox spacing="6" fx:id="havingSection" visible="false" managed="false">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="ðŸ”Ž HAVING (filter groups):" />
                                    <TextField fx:id="havingConditionField" promptText="e.g. COUNT(*) > 5" prefWidth="300" />
                                </HBox>
                            </VBox>
                            
                            <!-- Execute Button -->
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <Button text="â–¶ Execute Query" onAction="#handleReloadData" styleClass="button-primary" style="-fx-font-size: 14px; -fx-padding: 10 24 10 24;" />
                                <Button text="â†º Reset All" onAction="#handleResetQueryBuilder" />
                            </HBox>
                            
                            <!-- Advanced Query Tools -->
                            <Separator />
                            <Label text="ðŸ› ï¸ Advanced Query Tools" styleClass="section-title" />
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Button text="ðŸ”— Subquery Filter (ANY/ALL/EXISTS)..." onAction="#handleShowSubqueryBuilder" />
                                <Button text="âœ— Clear" onAction="#handleClearSubqueryFilters" styleClass="button-small" />
                            </HBox>
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Button text="ðŸ”€ CASE Expression Builder..." onAction="#handleShowCaseBuilder" />
                                <Button text="âœ— Clear" onAction="#handleClearCaseExpressions" styleClass="button-small" />
                            </HBox>
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Button text="ðŸ“ String Functions..." onAction="#handleShowStringFunctions" />
                                <Button text="âŠ˜ NULL Functions (COALESCE/NULLIF)..." onAction="#handleShowNullFunctions" />
                            </HBox>
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Button text="ðŸ”¤ SIMILAR TO Pattern Search..." onAction="#handleShowSimilarTo" />
                                <Button text="ðŸ·ï¸ User-Defined Types..." onAction="#handleShowCompositeTypes" />
                            </HBox>
                            
                            <TableView fx:id="dataTableView" prefHeight="320" VBox.vgrow="ALWAYS" />
                        </VBox>
                    </content>
                </Tab>
                <Tab text="ðŸ”— JOIN Wizard" closable="false">
                    <content>
                        <VBox spacing="16">
                            <padding>
                                <Insets top="16" right="16" bottom="16" left="16" />
                            </padding>
                            
                            <!-- Left Table Selection -->
                            <VBox spacing="8">
                                <Label text="ðŸ“‹ Primary Table" styleClass="section-title" />
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="Table:" style="-fx-font-weight: bold;" />
                                    <ComboBox fx:id="joinLeftTableCombo" prefWidth="200" onAction="#handleJoinLeftTableSelected" />
                                    <Label text="Alias:" />
                                    <TextField fx:id="joinLeftAliasField" promptText="Optional" prefWidth="100" />
                                </HBox>
                            </VBox>
                            
                            <Separator />
                            
                            <!-- Joins Configuration -->
                            <VBox spacing="8">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="ðŸ”— Joins" styleClass="section-title" />
                                    <Button text="+ Add JOIN" onAction="#handleAddJoin" styleClass="button-success" />
                                    <Button text="âœ— Clear All" onAction="#handleClearJoins" styleClass="button-danger" />
                                </HBox>
                                <VBox fx:id="joinRowsContainer" spacing="10" />
                            </VBox>
                            
                            <Separator />
                            
                            <!-- Column Selection for Result -->
                            <VBox spacing="8">
                                <Label text="Select Columns to Display" styleClass="section-title" />
                                <Button text="Choose Columns..." onAction="#handleChooseJoinColumns" />
                                <Label fx:id="joinSelectedColumnsLabel" text="All columns will be displayed" />
                            </VBox>
                            
                            <Separator />
                            
                            <!-- Additional Clauses -->
                            <VBox spacing="8">
                                <Label text="Additional Options" styleClass="section-title" />
                                <HBox spacing="10">
                                    <Label text="WHERE:" />
                                    <TextField fx:id="joinWhereField" promptText="e.g. t1.age > 18" prefWidth="300" />
                                </HBox>
                                <HBox spacing="10">
                                    <Label text="ORDER BY:" />
                                    <TextField fx:id="joinOrderByField" promptText="e.g. t1.name ASC" prefWidth="300" />
                                </HBox>
                                <HBox spacing="10">
                                    <Label text="LIMIT:" />
                                    <TextField fx:id="joinLimitField" promptText="e.g. 100" prefWidth="100" />
                                </HBox>
                            </VBox>
                            
                            <Separator />
                            
                            <!-- Execute -->
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <Button text="â–¶ Execute JOIN Query" onAction="#handleExecuteJoin" styleClass="button-primary" style="-fx-font-size: 14px; -fx-padding: 10 24 10 24;" />
                                <Button text="ðŸ‘ Show SQL" onAction="#handleShowJoinSQL" />
                            </HBox>
                            
                            <!-- Results -->
                            <TableView fx:id="joinResultsTableView" prefHeight="300" VBox.vgrow="ALWAYS" />
                        </VBox>
                    </content>
                </Tab>
                <Tab text="âž• Insert Data" closable="false">
                    <content>
                        <VBox spacing="12">
                            <padding>
                                <Insets top="16" right="16" bottom="16" left="16" />
                            </padding>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="ðŸ“‹ Table:" style="-fx-font-weight: bold;" />
                                <ComboBox fx:id="insertTableSelector" prefWidth="200" onAction="#handleInsertTableSelected" />
                                <Button text="â†º Reset Fields" onAction="#handleResetInsertForm" />
                            </HBox>
                            <GridPane fx:id="insertFormGrid" hgap="12" vgap="12" />
                            <Separator />
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <CheckBox fx:id="useTransactionCheckBox" text="ðŸ”’ Use Transaction" />
                                <Separator orientation="VERTICAL" />
                                <Button fx:id="beginTransactionButton" text="â–¶ Begin" onAction="#handleBeginTransaction" />
                                <Button fx:id="commitTransactionButton" text="âœ“ Commit" onAction="#handleCommitTransaction" styleClass="button-success" />
                                <Button fx:id="rollbackTransactionButton" text="â†© Rollback" onAction="#handleRollbackTransaction" styleClass="button-danger" />
                                <Separator orientation="VERTICAL" />
                                <Button fx:id="insertRowButton" text="âž• Insert Row" onAction="#handleInsertRow" styleClass="button-primary" />
                            </HBox>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <right>
        <VBox spacing="8" prefWidth="280" styleClass="sidebar-right">
            <padding>
                <Insets top="16" right="12" bottom="16" left="12" />
            </padding>
            <Label text="ðŸ“œ SQL Log" styleClass="section-title" />
            <ListView fx:id="sqlLogListView" VBox.vgrow="ALWAYS" styleClass="sql-log-view" />
        </VBox>
    </right>
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="status-bar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20" />
            </padding>
            <Label text="âš¡ Status:" style="-fx-font-weight: bold;" />
            <Label fx:id="statusLabel" text="Ready" styleClass="text-secondary" />
        </HBox>
    </bottom>
</BorderPane>