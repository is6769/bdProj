<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.dbschemastudio.controller.MainViewController">
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
                <Label text="Connection:" />
                <Label fx:id="connectionStatusLabel" text="Unknown" />
                <Label fx:id="connectionDetailsLabel" text="" />
                <Button text="Refresh" onAction="#handleRefreshConnection" />
                <Label text="Transaction:" />
                <Label fx:id="transactionStatusLabel" text="Inactive" />
            </children>
            <padding>
                <Insets top="12" right="12" bottom="12" left="12" />
            </padding>
        </HBox>
    </top>
    <center>
        <TabPane fx:id="mainTabPane">
            <tabs>
                <Tab text="Tables" closable="false">
                    <content>
                        <ScrollPane fitToWidth="true">
                            <content>
                                <VBox spacing="16">
                                    <padding>
                                        <Insets top="12" right="12" bottom="12" left="12" />
                                    </padding>
                                    
                                    <!-- ENUM Type Management Section -->
                                    <VBox spacing="8">
                                        <Label text="ENUM Types" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <TextField fx:id="enumNameField" promptText="Enum name (e.g. status_type)" prefWidth="200" />
                                            <TextField fx:id="enumValuesField" promptText="Values (comma-separated: pending,active,done)" HBox.hgrow="ALWAYS" />
                                            <Button text="Create ENUM" onAction="#handleCreateEnum" />
                                            <Button text="Refresh" onAction="#handleRefreshEnums" />
                                        </HBox>
                                        <ListView fx:id="enumListView" prefHeight="80" />
                                    </VBox>
                                    
                                    <Separator />
                                    
                                    <!-- Table Creation Section -->
                                    <VBox spacing="8">
                                        <Label text="Create New Table" styleClass="section-title" />
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <Label text="Table Name:" />
                                            <TextField fx:id="tableNameField" promptText="e.g. employees" prefWidth="200" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <Button text="Add Column" onAction="#handleAddColumn" />
                                            <Button text="Clear" onAction="#handleClearTableForm" />
                                        </HBox>
                                        
                                        <!-- Column Definition Grid -->
                                        <VBox fx:id="columnRowsContainer" spacing="4" />
                                        
                                        <HBox spacing="10">
                                            <Button text="Create Table" onAction="#handleCreateTable" />
                                        </HBox>
                                    </VBox>
                                    
                                    <Separator />
                                    
                                    <!-- Existing Tables Section -->
                                    <VBox spacing="8">
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <Label text="Existing Tables" styleClass="section-title" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <Button text="Refresh Tables" onAction="#handleRefreshTables" />
                                        </HBox>
                                        <ListView fx:id="tableListView" prefHeight="150" />
                                    </VBox>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>
                <Tab text="Data Viewer" closable="false">
                    <content>
                        <VBox spacing="12">
                            <padding>
                                <Insets top="12" right="12" bottom="12" left="12" />
                            </padding>
                            <HBox spacing="10">
                                <Label text="Table:" />
                                <ComboBox fx:id="dataTableSelector" prefWidth="200" onAction="#handleDataTableSelected" />
                                <Button text="Reload" onAction="#handleReloadData" />
                            </HBox>
                            <VBox spacing="6">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="Filters:" />
                                    <Button text="Add Filter" onAction="#handleAddFilter" />
                                    <Button text="Clear" onAction="#handleClearFilter" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button text="Apply" onAction="#handleReloadData" />
                                </HBox>
                                <VBox fx:id="filterRowsContainer" spacing="4" />
                            </VBox>
                            <TableView fx:id="dataTableView" prefHeight="320" />
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Insert Data" closable="false">
                    <content>
                        <VBox spacing="12">
                            <padding>
                                <Insets top="12" right="12" bottom="12" left="12" />
                            </padding>
                            <HBox spacing="10">
                                <Label text="Table:" />
                                <ComboBox fx:id="insertTableSelector" prefWidth="200" onAction="#handleInsertTableSelected" />
                                <Button text="Reset Fields" onAction="#handleResetInsertForm" />
                            </HBox>
                            <GridPane fx:id="insertFormGrid" hgap="10" vgap="10" />
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <CheckBox fx:id="useTransactionCheckBox" text="Use Transaction" />
                                <Button fx:id="beginTransactionButton" text="Begin" onAction="#handleBeginTransaction" />
                                <Button fx:id="commitTransactionButton" text="Commit" onAction="#handleCommitTransaction" />
                                <Button fx:id="rollbackTransactionButton" text="Rollback" onAction="#handleRollbackTransaction" />
                                <Button fx:id="insertRowButton" text="Insert Row" onAction="#handleInsertRow" />
                            </HBox>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <right>
        <VBox spacing="8" prefWidth="260">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12" />
            </padding>
            <Label text="SQL Log" styleClass="section-title" />
            <ListView fx:id="sqlLogListView" VBox.vgrow="ALWAYS" styleClass="list-view sql-log-view" />
        </VBox>
    </right>
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12" />
            </padding>
            <Label text="Status:" />
            <Label fx:id="statusLabel" text="Ready" />
        </HBox>
    </bottom>
</BorderPane>
